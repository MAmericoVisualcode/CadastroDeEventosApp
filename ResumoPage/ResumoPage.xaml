<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroDeEventosApp.Views.ResumoPage"
             Title="Resumo do Evento">

    <StackLayout Padding="20">
        <Label Text="Resumo do Evento" FontSize="24" HorizontalOptions="Center" />

        <Label Text="{Binding Nome}" FontSize="18" />
        <Label Text="{Binding Local}" FontSize="18" />
        <Label Text="{Binding DataInicio, StringFormat='Data de Início: {0:D}'}" FontSize="18" />
        <Label Text="{Binding DataTermino, StringFormat='Data de Término: {0:D}'}" FontSize="18" />
        <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dias'}" FontSize="18" />
        <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" FontSize="18" />
        <Label Text="{Binding CustoTotal, StringFormat='Custo Total: R${0:F2}'}" FontSize="18" />
    </StackLayout>
</ContentPage>
